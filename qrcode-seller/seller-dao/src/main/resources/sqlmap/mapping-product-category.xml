<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper    
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PRODUCT">

	<resultMap id="RM-CATEGORY" type="TA-CATEGORY">
		<result property="categoryID" column="CATEGORY_ID" />
		<result property="code" column="CODE" />
		<result property="name" column="NAME" />
		<result property="parentID" column="PARENT_ID" />
		<result property="isLeaf" column="IS_LEAF" />

		<result property="status" column="STATUS" />
		<result property="hold1" column="HOLD1" />
		<result property="meto" column="METO" />
		<result property="createTime" column="CREATE_TIME" />
		<result property="updateTime" column="UPDATE_TIME" />
	</resultMap>


	<!-- 类目的公共查询ＳＱＬ -->
	<sql id="SQL_SELECT_CATEGORY">
		<![CDATA[
			SELECT a.CATEGORY_ID, 
					a.CODE,
					a.NAME,
					a.PARENT_ID,
					a.IS_LEAF,
					
					a.STATUS,
					a.HOLD1,
					a.METO,
			    	a.CREATE_TIME,
			    	a.UPDATE_TIME
			FROM TB_PQ_CATEGORY  a
	   ]]>
	</sql>


	<!-- 类目的公共查询条件 -->
	<sql id="SQL_WHERE_CATEGORY">
		<if test="categoryID != null and categoryID !=''">
			AND a.CATEGORY_ID = #{categoryID}
		</if>
		<if test="code != null and code !=''">
			AND a.CODE = #{code}
		</if>
		<if test="name != null and name !=''">
			AND a.NAME like  '%' ||  #{name}
		</if>
	</sql>
	
	
	<!-- 创建类目 -->
	<insert id="INSERT_CATEGORY" parameterType="TA-CATEGORY">
		INSERT INTO TB_PQ_CATEGORY  ( CATEGORY_ID , CODE, NAME, PARENT_ID, 
			IS_LEAF, STATUS, HOLD1, METO, CREATE_TIME, UPDATE_TIME) 
		VALUES (#{categoryID},   #{code}, #{name},  #{parentID},  #{isLeaf}, 
		        #{status},  #{hold1}, #{meto}, #{createTime}, #{updateTime}) 
	   	<selectKey resultType="java.lang.Integer" keyProperty="categoryID">  
        	SELECT LAST_INSERT_ID() AS CATEGORY_ID 
	    </selectKey>
	</insert>


	<!-- 更新类目 -->
	<update id="UPDATE_CATEGORY" parameterType="TA-CATEGORY">
		UPDATE TB_PQ_CATEGORY SET NAME = #{name}, PARENT_ID = #{parentID},
			IS_LEAF = #{isLeaf}, STATUS = #{status}, HOLD1 = #{hold1},METO = #{meto}, UPDATE_TIME= #{updateTime}
		WHERE CATEGORY_ID = #{categoryID}
	</update>


	<!-- 根据配置ID获取类目信息 -->
	<select id="FIND_CATEGORY_BY_ID" parameterType="int"
		resultMap="RM-CATEGORY">
		<include refid="SQL_SELECT_CATEGORY" /> WHERE a.CATEGORY_ID = #{value}
	</select>
	
	
	<!-- 根据配置CODE获取类目信息 -->
	<select id="FIND_CATEGORY_BY_CODE" parameterType="string"
		resultMap="RM-CATEGORY">
		<include refid="SQL_SELECT_CATEGORY" /> WHERE a.CODE = #{value}
	</select>

	
	<!-- 删除类目 -->
	<delete id="DELETE_CATEGORY" parameterType="int">
		DELETE FROM TB_PQ_CATEGORY WHERE CATEGORY_ID = #{value}
	</delete>
	
</mapper>
